<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxime.smartbookmarkswalter.MainActivity">

    <TextView
        android:text="Comment per Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

    <TextView
        android:text="77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtNbCommentsPerBooks"
        android:textSize="24sp" />

    <TextView
        android:text="Nb Books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginBottom="63dp"
        android:textSize="18sp" />

    <TextView
        android:text="Nb Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/textView8"
        android:textSize="18sp" />

    <TextView
        android:text="77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNbComments"
        android:textSize="30sp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNbBooks"
        android:textSize="30sp"
        android:text="77"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/txtNbComments"
        android:layout_alignBottom="@+id/txtNbComments"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:text="See all Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonComments"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="See all books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBooks"
        android:layout_above="@+id/buttonComments"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Bienvenue sur l'application d'un génie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Pensez à vous en inspirer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
